<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ChoiceBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<BorderPane prefHeight="600.0" prefWidth="900.0" xmlns="http://javafx.com/javafx/25" xmlns:fx="http://javafx.com/fxml/1" fx:controller="swe.group04.libraryms.controllers.BookController">

    <!-- HEADER SEZIONE -->
    <top>
        <VBox spacing="5" BorderPane.alignment="CENTER_LEFT">
            <padding>
                <Insets bottom="10" left="20" right="20" top="15" />
            </padding>
            <children>
                <Label styleClass="section-title" text="Catalogo Libri" />

                <Label styleClass="main-subtitle" text="Visualizza, cerca e gestisci i libri della biblioteca" />
            </children>
        </VBox>
    </top>

    <!-- CONTENUTO PRINCIPALE -->
    <center>
        <VBox spacing="10">
            <padding>
                <Insets bottom="10" left="20" right="20" top="0" />
            </padding>
            <children>

                <!-- BARRA DI RICERCA -->
                <HBox spacing="10">
                    <children>
                        <Label styleClass="form-label" text="Ricerca:" />

                        <TextField fx:id="searchField" promptText="Titolo, autore, ISBN..." HBox.hgrow="ALWAYS" />

                        <ChoiceBox fx:id="searchFilterChoiceBox" prefWidth="140">
                            <!-- I valori reali li imposti dal controller -->
                        </ChoiceBox>

                        <Button styleClass="action-button" text="Cerca" />
                    </children>
                </HBox>

                <!-- TABELLA LIBRI -->
                <TableView fx:id="bookTable" VBox.vgrow="ALWAYS">
                    <columns>
                        <TableColumn fx:id="titleClm" prefWidth="191.4090461730957" text="Titolo" />
                        <TableColumn fx:id="authorClm" prefWidth="179.30935668945312" text="Autore" />
                        <TableColumn fx:id="yearClm" prefWidth="95.70455932617188" text="Anno" />
                        <TableColumn fx:id="isbnClm" prefWidth="124.00347900390625" text="ISBN" />
                        <TableColumn fx:id="availabilityColumn" prefWidth="146.70452880859375" text="DisponibilitÃ " />
                        <TableColumn fx:id="totalCopiesClm" prefWidth="134.29547119140625" text="Copie Totali" />
                    </columns>
                </TableView>

            </children>
        </VBox>
    </center>

    <!-- BARRA BOTTONI AZIONI -->
    <bottom>
        <HBox alignment="CENTER_RIGHT" spacing="10" BorderPane.alignment="CENTER">
            <padding>
                <Insets bottom="12" left="20" right="20" top="8" />
            </padding>
            <children>
                <Button styleClass="secondary-button" text="Torna alla Home" />

                <Button styleClass="secondary-button" text="Dettagli" />

                <Button styleClass="action-button" text="Aggiungi" />

                <Button styleClass="action-button" text="Modifica" />

                <Button styleClass="action-button" text="Elimina" />
            </children>
        </HBox>
    </bottom>

</BorderPane>
