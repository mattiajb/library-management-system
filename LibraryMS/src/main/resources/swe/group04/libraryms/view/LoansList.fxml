<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.String?>
<?import javafx.collections.FXCollections?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ChoiceBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Separator?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<BorderPane prefHeight="600.0" prefWidth="900.0"
            styleClass="root-pane"
            xmlns="http://javafx.com/javafx/25"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="swe.group04.libraryms.controllers.LoansListController">

    <!-- HEADER -->
    <top>
        <VBox spacing="5" BorderPane.alignment="CENTER">
            <padding>
                <Insets bottom="8" left="20" right="20" top="12" />
            </padding>
            <children>
                <Label styleClass="section-title"
                       text="Lista Prestiti" />

                <Label styleClass="main-subtitle"
                       text="Visualizza e gestisci i prestiti della biblioteca" />
            </children>
        </VBox>
    </top>

    <!-- CENTRO: FILTRO + TABELLA PRESTITI -->
    <center>
        <VBox spacing="10">
            <padding>
                <Insets bottom="10" left="20" right="20" top="10" />
            </padding>
            <children>

                <!-- SOLO FILTRO: Tutti / Attivi -->
                <HBox spacing="10">
                    <children>
                        <Label styleClass="form-label" text="Mostra:" />

                        <ChoiceBox fx:id="loanFilterChoiceBox" prefWidth="200">
                            <items>
                                <FXCollections fx:factory="observableArrayList">
                                    <String fx:value="Tutti i prestiti" />
                                    <String fx:value="Prestiti attivi" />
                                </FXCollections>
                            </items>
                        </ChoiceBox>
                    </children>
                </HBox>

                <Separator />

                <!-- TABELLA PRESTITI -->
                <TableView fx:id="loanTable" VBox.vgrow="ALWAYS">
                    <columns>
                        <TableColumn fx:id="loanIdColumn"
                                     prefWidth="90"
                                     text="ID Prestito" />
                        <TableColumn fx:id="userColumn"
                                     prefWidth="180"
                                     text="Utente" />
                        <TableColumn fx:id="bookColumn"
                                     prefWidth="230"
                                     text="Libro" />
                        <TableColumn fx:id="startDateColumn"
                                     prefWidth="120"
                                     text="Data inizio" />
                        <TableColumn fx:id="dueDateColumn"
                                     prefWidth="140"
                                     text="Data restituzione" />
                        <TableColumn fx:id="statusColumn"
                                     prefWidth="120"
                                     text="Stato" />
                    </columns>
                    <columnResizePolicy>
                        <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
                    </columnResizePolicy>
                </TableView>
            </children>
        </VBox>
    </center>

    <!-- FOOTER: AZIONI CONSENTITE -->
    <bottom>
        <HBox alignment="CENTER_RIGHT"
              spacing="10"
              styleClass="footer-bar"
              BorderPane.alignment="CENTER">
            <padding>
                <Insets bottom="8" left="20" right="20" top="8" />
            </padding>
            <children>

                <!-- Visualizza dettagli prestito selezionato -->
                <Button fx:id="loanDetailsButton"
                        styleClass="action-button"
                        text="Visualizza dettagli"
                        onAction="#showLoanDetails" />

                <!-- Registra nuovo prestito (UC14) -->
                <Button fx:id="addLoanButton"
                        styleClass="action-button"
                        text="Registra prestito"
                        onAction="#registerLoan" />

                <!-- Torna alla home -->
                <Button fx:id="loanHomeButton"
                        styleClass="secondary-button"
                        text="Torna alla home"
                        onAction="#backHome" />
            </children>
        </HBox>
    </bottom>

</BorderPane>