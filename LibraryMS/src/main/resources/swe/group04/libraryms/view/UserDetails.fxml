<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<BorderPane xmlns="http://javafx.com/javafx/17"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="swe.group04.libraryms.controllers.UserDetailsController"
            prefWidth="500.0" prefHeight="350.0">

    <!-- HEADER -->
    <top>
        <VBox spacing="5">
            <padding>
                <Insets top="15" right="20" bottom="10" left="20"/>
            </padding>
            <children>
                <Label text="Dettagli Utente"
                       styleClass="section-title"/>

                <Label text="Informazioni complete sull'utente selezionato"
                       styleClass="main-subtitle"/>
            </children>
        </VBox>
    </top>

    <!-- CONTENUTO PRINCIPALE -->
    <center>
        <GridPane hgap="10" vgap="10">
            <padding>
                <Insets top="0" right="20" bottom="10" left="20"/>
            </padding>

            <!-- Nome -->
            <children>
                <Label text="Nome:" GridPane.rowIndex="0" GridPane.columnIndex="0"
                       styleClass="form-label"/>
                <Label fx:id="nameValueLabel"
                       GridPane.rowIndex="0" GridPane.columnIndex="1"/>

                <!-- Cognome -->
                <Label text="Cognome:" GridPane.rowIndex="1" GridPane.columnIndex="0"
                       styleClass="form-label"/>
                <Label fx:id="surnameValueLabel"
                       GridPane.rowIndex="1" GridPane.columnIndex="1"/>

                <!-- ID / Matricola -->
                <Label text="ID / Matricola:" GridPane.rowIndex="2" GridPane.columnIndex="0"
                       styleClass="form-label"/>
                <Label fx:id="idValueLabel"
                       GridPane.rowIndex="2" GridPane.columnIndex="1"/>

                <!-- Email -->
                <Label text="Email:" GridPane.rowIndex="3" GridPane.columnIndex="0"
                       styleClass="form-label"/>
                <Label fx:id="emailValueLabel"
                       GridPane.rowIndex="3" GridPane.columnIndex="1"/>

                <!-- Prestiti attivi -->
                <Label text="Prestiti attivi:" GridPane.rowIndex="4" GridPane.columnIndex="0"
                       styleClass="form-label"/>
                <Label fx:id="activeLoansValueLabel"
                       GridPane.rowIndex="4" GridPane.columnIndex="1"/>

                <!-- Eventuale stato / blocco -->
                <Label text="Stato:" GridPane.rowIndex="5" GridPane.columnIndex="0"
                       styleClass="form-label"/>
                <Label fx:id="statusValueLabel"
                       GridPane.rowIndex="5" GridPane.columnIndex="1"/>
            </children>
        </GridPane>
    </center>

    <!-- FOOTER CON PULSANTI -->
    <bottom>
        <HBox alignment="CENTER_RIGHT" spacing="10">
            <padding>
                <Insets top="8" right="20" bottom="12" left="20"/>
            </padding>
            <children>
                <Button text="Chiudi"
                        styleClass="secondary-button"/>
            </children>
        </HBox>
    </bottom>

</BorderPane>