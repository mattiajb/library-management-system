<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Separator?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<BorderPane prefHeight="400.0" prefWidth="650.0"
            xmlns="http://javafx.com/javafx/25"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="swe.group04.libraryms.controllers.UserDetailsController"
            styleClass="root-pane">

    <!-- HEADER -->
    <top>
        <VBox spacing="5" BorderPane.alignment="CENTER_LEFT">
            <padding>
                <Insets top="12" right="20" bottom="8" left="20" />
            </padding>
            <children>
                <Label text="Dettagli utente"
                       styleClass="section-title" />

                <Label text="Visualizza o modifica i dati dell'utente selezionato"
                       styleClass="main-subtitle" />

                <Separator />
            </children>
        </VBox>
    </top>

    <!-- CONTENUTO CENTRALE: FORM DETTAGLI UTENTE -->
    <center>
        <VBox spacing="10">
            <padding>
                <Insets top="10" right="20" bottom="10" left="20" />
            </padding>
            <children>

                <GridPane hgap="12" vgap="10">
                    <children>
                        <!-- Matricola (non modificabile) -->
                        <Label text="Matricola:"
                               styleClass="form-label"
                               GridPane.rowIndex="0" GridPane.columnIndex="0" />

                        <TextField fx:id="matricolaField"
                                   editable="false"
                                   promptText="ID / matricola utente"
                                   GridPane.rowIndex="0" GridPane.columnIndex="1" />

                        <!-- Nome -->
                        <Label text="Nome:"
                               styleClass="form-label"
                               GridPane.rowIndex="1" GridPane.columnIndex="0" />

                        <TextField fx:id="nameField"
                                   promptText="Nome"
                                   GridPane.rowIndex="1" GridPane.columnIndex="1" />

                        <!-- Cognome -->
                        <Label text="Cognome:"
                               styleClass="form-label"
                               GridPane.rowIndex="2" GridPane.columnIndex="0" />

                        <TextField fx:id="surnameField"
                                   promptText="Cognome"
                                   GridPane.rowIndex="2" GridPane.columnIndex="1" />

                        <!-- Email -->
                        <Label text="Email:"
                               styleClass="form-label"
                               GridPane.rowIndex="3" GridPane.columnIndex="0" />

                        <TextField fx:id="emailField"
                                   promptText="Email"
                                   GridPane.rowIndex="3" GridPane.columnIndex="1" />

                        <!-- Prestiti attivi: solo informativo -->
                        <Label text="Prestiti attivi:"
                               styleClass="form-label"
                               GridPane.rowIndex="4" GridPane.columnIndex="0" />

                        <TextField fx:id="activeLoansField"
                                   editable="false"
                                   promptText="Numero di prestiti attivi"
                                   GridPane.rowIndex="4" GridPane.columnIndex="1" />
                    </children>
                </GridPane>

                <!-- eventuale nota sui campi obbligatori -->
                <!-- <Label text="I campi contrassegnati con * sono obbligatori." styleClass="hint-label" /> -->

            </children>
        </VBox>
    </center>

    <!-- FOOTER: AZIONI SU UTENTE -->
    <bottom>
        <HBox alignment="CENTER_RIGHT" spacing="10"
              BorderPane.alignment="CENTER"
              styleClass="footer-bar">
            <padding>
                <Insets top="8" right="20" bottom="8" left="20" />
            </padding>
            <children>
                <!-- Salva modifiche ai dati dell'utente -->
                <Button fx:id="saveButton"
                        text="Salva modifiche"
                        styleClass="action-button" />

                <!-- Elimina utente -->
                <Button fx:id="deleteButton"
                        text="Elimina utente"
                        styleClass="exit-button" />

                <!-- Torna alla lista (chiude la finestra) -->
                <Button fx:id="cancelButton"
                        text="Torna alla lista"
                        styleClass="secondary-button" />
            </children>
        </HBox>
    </bottom>

</BorderPane>